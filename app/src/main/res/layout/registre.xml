<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:id="@+id/registre"
                                             android:background="#ffffffff"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">
    <ScrollView android:id="@+id/scrollView2" android:layout_width="6dp" android:layout_height="0dp"
                android:layout_marginTop="8.0dip" app:layout_constraintEnd_toStartOf="@+id/button4"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="15dp"
    />
    <EditText android:id="@+id/username" android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:hint="User name" android:ems="10" android:inputType="textPersonName"
              app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="@+id/scrollView2"
              android:layout_marginTop="44dp" android:layout_marginStart="24dp"/>
    <EditText android:id="@+id/email" android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:hint="e-mail" android:ems="10" android:inputType="textPersonName"
              app:layout_constraintStart_toStartOf="@+id/scrollView2" android:layout_marginTop="24dp"
              app:layout_constraintTop_toBottomOf="@+id/username" android:layout_marginStart="24dp"/>
    <EditText android:id="@+id/pass" android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:hint="Contrasenya" android:ems="10" android:inputType="textPersonName"
              app:layout_constraintStart_toStartOf="@+id/scrollView2" android:layout_marginTop="24dp"
              app:layout_constraintTop_toBottomOf="@+id/email" android:layout_marginStart="24dp"/>
    <Button android:id="@+id/button4" android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Registrar"
            app:layout_constraintStart_toEndOf="@+id/scrollView2" app:layout_constraintEnd_toStartOf="@+id/button5"
            android:layout_marginBottom="132dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="139dp"/>
    <Button android:id="@+id/button5" android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Cancelar"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/button4"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="132dp"/>
    <ProgressBar
            android:visibility="gone"
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />
</android.support.constraint.ConstraintLayout>